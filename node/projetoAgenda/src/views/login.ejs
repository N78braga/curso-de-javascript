<%- include('includes/head'); %> <%- include('includes/nav'); %>
<div class="container">
  <div class="row"></div>

  <div class="col-lg-2"></div>

  <div class="col-lg-8 my-3">
    <h1 class="text-center">Criar conta ou Entrar</h1>
    <p class="text-center lead">Faça login ou crie a sua conta</p>

    <%- include('includes/messages'); %>

    <div class="row ">
      <div class="col-lg">
        <h4>Faça o seu cadastro</h4>
        <p>Se você não possui um cadastro realize um preenchendo o formulario abaixo:</p>
        <form class="formRegister col-lg my-4" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group ">
            <label>Digite o seu Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
            />
         
          </div>
          <div class="form-group">
            <label>Senha</label>
            <input
              type="password"
              class="form-control"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary">Criar conta</button>
        </form>
      </div>

      <div class="col-lg">
        <h4>logar</h4>
        <p>Realizer o seu login:</p>
        <form class="formLogin col-lg my-5" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label>Login</label>
            <input
              type="email"
              class="form-control"
              name="email"
            />
         
          </div>
          <div class="form-group">
            <label>Logar</label>
            <input
              type="password"
              class="form-control"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary">Logar</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-lg-2"></div>
</div>
<%- include('includes/footer'); %>
